<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoExtensao.Configuracoes"
             Title="Configuracoes">
    <VerticalStackLayout>
        <Border
            HeightRequest="230"
            StrokeThickness="0">
            <HorizontalStackLayout>
                <ImageButton
                    Margin="80"
                    Source="dotnet_bot.png"
                    WidthRequest="100"
                    HeightRequest="100"
                />
                <Label
                    x:Name="lblUsuarioLogado"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                />
            </HorizontalStackLayout>
        </Border>
        <Border
            HeightRequest="500"
            StrokeThickness="0">
            <VerticalStackLayout
                Margin="30"
                Spacing="20"
                HorizontalOptions="Start">
                <Button 
                    Text="Tipo de eventos"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />  
                <Button 
                    Text="Eventos"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />
                <Button 
                    Text="Notificação"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />
                <Button 
                    Text="Aparência"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />
                <Button 
                    Text="Privacidade e segurança"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />
            </VerticalStackLayout>
        </Border>
        <Button 
            Text="Sair"
            VerticalOptions="End" 
            HorizontalOptions="Center"
            Clicked="BotaoSair_Clicked"
            BackgroundColor="Transparent"
            TextColor="White"
        />
    </VerticalStackLayout>
</ContentPage>