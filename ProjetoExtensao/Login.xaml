<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoExtensao.Login">

    <VerticalStackLayout>
        <Border
            StrokeThickness="0">
            <VerticalStackLayout>
                <Image
                    Source="dotnet_bot.png"    
                    HeightRequest="300"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                />
            </VerticalStackLayout>
        </Border>
        <Border
            StrokeThickness="0">
            <VerticalStackLayout
                Padding="20">
                <Label
                    Text="Bem vindo!"
                    Style="{StaticResource Headline}"
                    HorizontalOptions="Center"
                />
            </VerticalStackLayout>
        </Border>
        <Border
             StrokeThickness="0">
            <VerticalStackLayout
                Padding="10 10 0 10"
                Spacing="20">
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="8"
                        StrokeShape="RoundRectangle 20"
                        Background="AliceBlue">
                    <Entry                
                        MaxLength="20"
                        x:Name="Usuario"
                        Placeholder="Informe seu e-mail"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                    />
                </Border>
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="8"
                        StrokeShape="RoundRectangle 20"
                        Background="AliceBlue">
                    <Entry
                        MaxLength="20"
                        x:Name="Senha"
                        IsPassword="True"
                        Placeholder="Digite a sua senha"
                        BackgroundColor="Transparent"     
                        TextColor="Black"
                    />
                </Border>
            </VerticalStackLayout>
        </Border>
        <Border    
            StrokeThickness="0">
            <VerticalStackLayout
                Spacing="20">
                <Button
                    x:Name="btnEsqueceuSenha"
                    Text="Esqueci minha senha" 
                    Clicked="BotaoEsqueceuSenha_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    BackgroundColor="Transparent"
                    TextColor="White"
                />
                <Button
                    x:Name="btnLogin"
                    Text="Entrar" 
                    Clicked="BotaoLogin_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    BackgroundColor="LawnGreen"
                />
                <Button
                    x:Name="btnCadastrar"
                    Text="Cadastrar" 
                    Clicked="BotaoCadastrar_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="300"
                    BackgroundColor="LightBlue"
                />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>